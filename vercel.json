{
  "framework": "vite",
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "outputDirectory": "dist",

  "rewrites": [
    {
      "source": "/((?!.*\\.(txt|js|json|svg|ico|png|jpg|jpeg|gif|webp|css|woff|woff2|ttf|eot|woff2)$).*)",
      "destination": "/index.html"
    }
  ],

  "headers": [
    {
      "source": "/(.*\\.txt)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain"
        }
      ]
    }
  ]
}
